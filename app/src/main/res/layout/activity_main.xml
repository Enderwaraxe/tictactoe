<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="186dp"
        android:layout_height="54dp"
        android:text="Tic Tac Toe"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="227dp"
        android:layout_height="227dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/black"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TableLayout
        android:layout_width="227dp"
        android:layout_height="227dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:stretchColumns="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <ImageView
                android:id="@+id/button1"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:background="@color/white"
                android:onClick="humanMove"
                android:padding="3dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/button2"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_marginStart="4dp"
                android:background="@color/white"
                android:onClick="humanMove"
                android:padding="3dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/button3"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_marginStart="4dp"
                android:background="@color/white"
                android:onClick="humanMove"
                android:padding="3dp"
                android:scaleType="fitXY" />
        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/button4"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:onClick="humanMove"
                android:padding="3dp"
                android:scaleType="fitXY"

                />

            <ImageView
                android:id="@+id/button5"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:onClick="humanMove"
                android:padding="3dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/button6"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:onClick="humanMove"
                android:padding="3dp"
                android:scaleType="fitXY" />
        </TableRow>


        <TableRow>

            <ImageView
                android:id="@+id/button7"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:onClick="humanMove"
                android:padding="3dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/button8"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:onClick="humanMove"
                android:padding="3dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/button9"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:onClick="humanMove"
                android:padding="3dp"
                android:scaleType="fitXY" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textViewturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginTop="141dp"
        android:layout_marginEnd="178dp"
        android:layout_marginBottom="571dp"
        android:text="X's turn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"

        android:layout_width="102dp"
        android:layout_height="55dp"
        android:layout_marginStart="263dp"
        android:layout_marginTop="511dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="172dp"
        android:backgroundTint="@color/red"
        android:onClick="reset"
        android:text="Reset Board"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/owins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="259dp"
        android:layout_marginTop="171dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="541dp"
        android:text="O Wins: 0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="185dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="184dp"
        android:layout_marginBottom="540dp"
        android:text="Ties: 0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/xwins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="94dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="259dp"
        android:layout_marginBottom="540dp"
        android:text="X Wins: 0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switchplayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="616dp"
        android:layout_marginEnd="299dp"
        android:layout_marginBottom="88dp"
        android:text="Bot"
        android:onClick="switched"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switchplayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="145dp"
        android:layout_marginTop="616dp"
        android:layout_marginEnd="178dp"
        android:layout_marginBottom="88dp"
        android:text="Bot"
        android:onClick="switched"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="584dp"
        android:layout_marginEnd="319dp"
        android:layout_marginBottom="128dp"
        android:text="X's"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="584dp"
        android:layout_marginEnd="203dp"
        android:layout_marginBottom="128dp"
        android:text="O's"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button10"
        android:layout_width="102dp"
        android:layout_height="55dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="511dp"
        android:layout_marginEnd="263dp"
        android:layout_marginBottom="172dp"
        android:onClick="begin"
        android:text="Start New"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>